@model IEnumerable<EMS.ViewModel.EmployeeViewModel>


@{
    ViewData["Title"] = "Employees";
}

<h1>Employee List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fa fa-plus"> </i> New Employee
    </a>
</p>

<div class="card">
    <div class="card-header">
        <h3 class="card-title"></h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.EmpNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee.DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DesignationName)
                    </th>
                    <th> 
                        Edit
                    </th>
                    <th>
                        View
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model )
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.EmpNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.EmailAddress)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesignationName)
                        </td>

                        <td >
                            <a asp-action="Edit" asp-route-id="@item.Employee.Id" class="btn btn-success"><i class="fa fa-pen"></i></a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Employee.Id" class="btn btn-success"><i class="fas fa-search fa-fw"></i></a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Employee.Id" class="btn btn-success"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    <div>
</div>